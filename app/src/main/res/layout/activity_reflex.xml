<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.cyka.cykavodka.Reflex">

    <ImageView
        android:id="@+id/square1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/square4"
        android:layout_alignStart="@+id/square4"
        android:layout_alignTop="@+id/square2"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/square2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/square3"
        android:layout_toStartOf="@+id/square3"
        android:visibility="invisible"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/square3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/square1"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:visibility="invisible"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/square4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/square"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_below="@+id/square3"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <ImageView
        android:id="@+id/square5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/square2"
        android:layout_alignRight="@+id/square2"
        android:layout_below="@+id/square4"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/square6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/square3"
        android:layout_toLeftOf="@+id/square2"
        android:layout_toStartOf="@+id/square2"
        android:visibility="invisible"
        app:srcCompat="@drawable/square" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:onClick="show3"
        android:text="Start" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:onClick="gotoAchieve"
        android:text="Unlock achievement"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/cocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cocktailUnlock"
        android:visibility="invisible"
        app:srcCompat="@drawable/cocktail"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/square3"
        android:layout_toEndOf="@+id/square3"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

</RelativeLayout>
